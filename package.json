{
  "name": "zmetric",
  "version": "0.1.0",
  "homepage": "https://zmetric.surge.sh",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@storybook/react": "^5.0.8",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.9.0",
    "moment": "^2.24.0",
    "prop-types": "latest",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "recharts": "^1.5.0",
    "regression": "^2.0.1",
    "semantic-ui-calendar-react": "^0.14.4",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.86.0"
  },
  "scripts": {
    "semantic-ui": "cp ./node_modules/semantic-ui-css/semantic.min.css ./.storybook/",
    "storybook": "yarn semantic-ui && start-storybook -s ./.storybook -p 6006",
    "storybook:build": "yarn semantic-ui && build-storybook -s ./.storybook/",
    "storybook:local-server:start": "http-server --silent -p 6006 storybook-static &",
    "storybook:local-server:stop": "pkill -f http-server",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "yarn storybook:build && yarn storybook:local-server:start && yarn test-coverage && yarn storybook:local-server:stop",
    "audit": "node scripts/audit.js",
    "test-coverage": "react-scripts test --coverage",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "predeploy": "yarn build",
    "deploy": "surge ./build"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@storybook/addon-storyshots": "^5.0.8",
    "@storybook/addon-storyshots-puppeteer": "^5.0.8",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "2.1.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "require-context.macro": "^1.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/setupTests.js",
      "!scripts/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
